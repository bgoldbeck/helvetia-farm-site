
// NOTE: Requires script(src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js")
// https://confetti.js.org/more.html
mixin confetti(particleCount, spread, ox, oy, disableForReducedMotion)
    script.
      setTimeout(() => {
        confetti({
          particleCount: #{particleCount}, 
          spread: #{spread}, 
          origin: {"x": #{ox}, "y": #{oy}}, 
          disableForReducedMotion: #{disableForReducedMotion}
        });
      }, 500);

//- Navbar mixins
mixin fixed-top-nav(name, id)
    nav.navbar.navbar-expand-lg.fixed-top.bg-primary(data-bs-theme="dark")
        div.container-fluid
            a.navbar-brand(href="#")
            button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarColor03", aria-controls="navbarColor03", aria-expanded="false", aria-label="Toggle navigation")
                span.navbar-toggler-icon
            div.collapse.navbar-collapse(id="navbarColor03")
                ul.navbar-nav.me-auto
                    block
 
mixin nav(name, id)
    
    nav.navbar.navbar-expand-lg.bg-light(data-bs-theme="light")
        div.container-fluid
            a.navbar-brand(href="#")
            button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarColor03", aria-controls="navbarColor03", aria-expanded="false", aria-label="Toggle navigation")
                span.navbar-toggler-icon
            div.collapse.navbar-collapse(id="navbarColor03")
