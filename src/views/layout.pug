
include templates/mixins
block variables
doctype html
html
  head
    meta(charset="utf-8")
    link(rel="shortcut icon", href="/images/greenhouse2.ico")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    
    link(href='/styles/style.css', rel='stylesheet')

    //link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD", crossorigin="anonymous")

    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js", type="text/javascript")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js", integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+", crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js")

    title #{title}
    +bootswatch("sketchy", "5.3.2")
    
  body
    
    div#root
        +fixed-top-nav("Navbar", "dropdown_menu")   
            div.container-fluid.center(style="border: 0px; opacity: 1; display: flex; height: 35px; width: 30%; margin-right: 0px;")
                img.img-fluid.center(src="/images/logo-title.png", style="height: 100%;")
               
            div.container-fluid.center(style="border: 0px solid green; opacity: 1; display: flex; width: 70%; justify-content: center;")
                +nav_item("/home") home
                +nav_item("/markets") markets 
                +nav_item("/farm") our farm
                +nav_item("/contact") contact 
            div.container-fluid.right(style="opacity: 1; display: flex; width: 70%;")
                span.center(style="color: rgb(180, 180, 180);") Fresh Plants & Eats Since 1996
                
                
                img(src="/images/facebook.png", style="display: flex; height: 24px; margin: 2px 2px 2px 2px;")
                img(src="/images/instagram.png", style="display: flex; height: 24px; margin: 2px 2px 2px 2px;")
                
                

            //div.container-fluid(style="border: 1px solid red; opacity: 1; display: flex; width: 20%;")
                //img.img-fluid(src="/images/logo-title.png", style="margin: 0 auto; display: flex;")
            //div.container-fluid(style="border: 1px solid blue; opacity: 1; width: 100%; height: 100%;")
            
                
        //div.parent(style="border: 1px solid green; opacity: 1; display: flex;")
            div.child(style="border: 1px solid red; opacity: 1; display: inline-block;")
                +image("images/logo-title.png", style="width: 250px; height:93px; margin-left: 90px;")
            div.child(style="width: 50%;border: 1px solid blue; opacity: 1; display: inline-block;")
               
    block layout-content
